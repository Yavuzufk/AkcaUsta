@model ResultAboutDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header mb-0">
    <h3 class="fw-bold mb-3">Hakkımızda</h3>
    <ul class="breadcrumbs mb-3">
        <li class="nav-home">
            <a href="/A_Home/Index">
                <i class="icon-home"></i>
            </a>
        </li>
        <li class="separator">
            <i class="icon-arrow-right"></i>
        </li>
        <li class="nav-item">
            <a href="#">Hakkımızda Alanı</a>
        </li>
    </ul>
</div>
<div class="page-category">Hakkımızda bilgilerinizi buradan güncelleyebilirsiniz.</div>

<form asp-action="Update" method="post">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Hakkımızda Alanı</div>
                </div>
                <div class="card-body">
                    <input type="hidden" asp-for="AboutID" /> <!-- varsa Id -->

                    <div class="form-group">
                        <input type="text"
                               class="form-control form-control-lg"
                               placeholder="Hakkımızda Başlık Alanı"
                               asp-for="Title" />
                    </div>
                    <div class="form-group">
                        <label for="comment">AÇIKLAMA</label>
                        <textarea class="form-control" rows="5" asp-for="Description"></textarea>
                    </div>
                    <div class="form-group">
                        <label>TELEFON</label>
                        <input type="text"
                               class="form-control form-control-lg"
                               placeholder="Hakkımızda Telefon No Alanı"
                               asp-for="Phone" />
                    </div>
                </div>
                <div class="card-action">
                    <button type="submit" class="btn btn-success">Güncelle</button>
                    <a class="btn btn-danger" href="/A_Home/Index">İptal</a>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    <script>
        $(document).ready(function () {
        @if (TempData["NotifyMessage"] != null)
        {
            <text>
                            $.notify({
                                // İçerik
                                icon: 'fa fa-bell',
                                title: '@TempData["NotifyTitle"]',
                                message: '@TempData["NotifyMessage"]'
                            },
                            {
                                // Ayarlar
                                type: '@TempData["NotifyType"]',
                                allow_dismiss: true,
                                newest_on_top: true,
                                placement: {
                                    from: "bottom",
                                    align: "right"
                                },
                                delay: 2500,
                                timer: 500,
                                animate: {
                                    enter: 'animated fadeInDown',
                                    exit: 'animated fadeOutUp'
                                },
                                offset: {
                                    x: 30,
                                    y: 30
                                }
                            });
            </text>
        }
        });
    </script>
}

