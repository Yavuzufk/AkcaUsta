@model List<ResultServiceRandevuDto>

@{
    ViewData["Title"] = "PasiveRandevu";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header mb-0">
    <h3 class="fw-bold mb-3">Onay Bekleyen Randevular</h3>
    <ul class="breadcrumbs mb-3">
        <li class="nav-home">
            <a href="/A_Home/Index">
                <i class="icon-home"></i>
            </a>
        </li>
        <li class="separator">
            <i class="icon-arrow-right"></i>
        </li>
        <li class="nav-item">
            <a href="#">Onay Bekleyen Randevular</a>
        </li>
    </ul>
</div>
<div class="page-category">Onay bekleyen randevuları buradan görebilirsiniz.</div>
<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <div class="d-flex align-items-center">
                <h4 class="card-title">Randevular</h4>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="display table table-striped table-hover text-center">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>İsim</th>
                            <th>Mail</th>
                            <th>Hizmet</th>
                            <th>Tarih</th>
                            <th>Durum</th>
                            <th>Mesaj</th>
                            <th style="width: 10%">Sil</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>ID</th>
                            <th>İsim</th>
                            <th>Mail</th>
                            <th>Hizmet</th>
                            <th>Tarih</th>
                            <th>Durum</th>
                            <th>Mesaj</th>
                            <th>Sil</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ServiceRandevuID</td>
                                <td>@item.Name</td>
                                <td>@item.Mail</td>
                                <td>@item.Service</td>
                                <td>@item.Date</td>
                                <td>
                                    @if (item.RandevuStatus == false)
                                    {
                                        <a href="/A_ServiceRandevu/RandevuStatus/@item.ServiceRandevuID"
                                           class="btn btn-warning btn-round btn-sm"
                                           title="Durumu Aktif Yap">
                                            <i class="fas fa-spinner"></i> Onay Bekliyor
                                        </a>
                                    }
                                    else
                                    {
                                        <a href="/A_ServiceRandevu/RandevuStatus/@item.ServiceRandevuID"
                                           class="btn btn-success btn-round btn-sm"
                                           title="Durumu Pasif Yap">
                                            <i class="fas fa-check"></i> Onaylandı
                                        </a>
                                    }
                                </td>
                                <td>@item.SpecialRequest</td>
                                <td>
                                    <div class="form-button-action">
                                        <a href="/A_ServiceRandevu/Delete/@item.ServiceRandevuID" class="btn btn-link btn-danger btn-lg">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

