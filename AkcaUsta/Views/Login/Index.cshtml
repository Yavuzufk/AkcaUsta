@model UserLoginDto

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Giriş Yap</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha384-... your correct sha384 here ..." crossorigin="anonymous">

    <style>
        body {
            background: linear-gradient(135deg, #6e8efb, #a777e3);
            height: 100vh;
        }

        .login-card {
            border: none;
            border-radius: 1rem;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2);
            background-color: #fff;
        }

        .login-card {
            background-color: rgba(255, 255, 255, 0.85);
            backdrop-filter: blur(10px);
        }

        .form-control:focus {
            box-shadow: none;
            border-color: #6e8efb;
        }

        ::placeholder {
            color: #aaa;
            font-size: 0.95rem;
        }

        .login-btn {
            background: #6e8efb;
            border: none;
            transition: background 0.3s ease;
        }

            .login-btn:hover {
                background: #5a7cfa;
                transform: translateY(-1px);
            }
    </style>
</head>
<body class="d-flex align-items-center justify-content-center">

    <div class="card login-card p-4" style="width: 100%; max-width: 400px;">
        <h3 class="text-center mb-4 text-primary">
            <i class="fas fa-user-circle me-2"></i>Hoş Geldiniz
        </h3>
        <p class="text-center my-4">
            Kullanıcılar :
            personel -> ufuk.yavuz.1907@hotmail.com - 35245757_Uy
            admin -> yavuzufuk@outlook.com.tr - 1234*aA
        </p>

        <form asp-action="Login" method="post">
            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0">
                        <i class="fas fa-envelope text-primary"></i>
                    </span>
                    <input asp-for="Email" class="form-control border-start-0" placeholder="E-posta adresi" />
                </div>
                <span class="text-danger small d-block mt-1">@Html.ValidationMessageFor(m => m.Email)</span>
            </div>

            <div class="mb-4">
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0">
                        <i class="fas fa-lock text-primary"></i>
                    </span>
                    <input asp-for="Password" class="form-control border-start-0" placeholder="Şifre" type="password" />
                </div>
                <span class="text-danger small d-block mt-1">@Html.ValidationMessageFor(m => m.Password)</span>
            </div>
            <div class="form-check">
                <input type="checkbox" asp-for="RememberMe" class="form-check-input" />
                <label class="form-check-label" for="RememberMe">Beni Hatırla</label>
            </div>
            <button type="submit" class="btn login-btn w-100 text-white fw-bold">Giriş Yap</button>

            <div class="text-center mt-3">
                <a href="#" class="text-decoration-none fw-semibold text-primary">Şifremi Unuttum?</a>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
