@model ResultBuisnessDataDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header mb-0">
    <h3 class="fw-bold mb-3">İş Verilerimiz</h3>
    <ul class="breadcrumbs mb-3">
        <li class="nav-home">
            <a href="/A_Home/Index">
                <i class="icon-home"></i>
            </a>
        </li>
        <li class="separator">
            <i class="icon-arrow-right"></i>
        </li>
        <li class="nav-item">
            <a href="#">İş Verileri</a>
        </li>
    </ul>
</div>
<div class="page-category">İş verilerimizi bilgilerinizi buradan güncelleyebilirsiniz.</div>

<form asp-action="Update" method="post">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <input type="hidden" asp-for="BuisnessDataID" /> <!-- varsa Id -->
                <div class="card-header">
                    <div class="card-title">İş Veri Alanımız</div>
                </div>
                <div class="card-body">
                    <div class="row" style="justify-content: center;">
                        <div class="col-6 col-sm-4 col-lg-2">
                            <div class="card">
                                <div class="card-body p-3 text-center">
                                    <div class="h1 m-0">35</div>
                                    <div class="text-muted mb-3">Yıllık Deneyimi</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-6 col-sm-4 col-lg-2">
                            <div class="card">
                                <div class="card-body p-3 text-center">
                                    <div class="h1 m-0">
                                        <input type="number" name="ExpertTechnicians" value="@Model.ExpertTechnicians" class="form-control form-control-lg" />
                                    </div>
                                    <div class="text-muted mb-3">Teknisyen Sayımız</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-6 col-sm-4 col-lg-2">
                            <div class="card">
                                <div class="card-body p-3 text-center">
                                    <div class="h1 m-0">
                                        <input type="number" name="SatisfiedClients" value="@Model.SatisfiedClients" class="form-control form-control-lg" />
                                    </div>
                                    <div class="text-muted mb-3">Memnun Müşteriler</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-6 col-sm-4 col-lg-2">
                            <div class="card">
                                <div class="card-body p-3 text-center">
                                    <div class="h1 m-0">
                                        <input type="number" value="@Model.CompleateProjects" class="form-control form-control-lg" readonly />
                                        <input type="hidden" name="CompleateProjects" value="1" />
                                    </div>
                                    <div class="text-muted mb-3">Tamamlanmış Projeler</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-action">
                    <button type="submit" class="btn btn-success">Ekle</button>
                    <a class="btn btn-danger" href="/A_Home/Index">İptal</a>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    <script>
        $(document).ready(function () {
        @if (TempData["NotifyMessage"] != null)
        {
            <text>
                                $.notify({
                                    // İçerik
                                    icon: 'fa fa-bell',
                                    title: '@TempData["NotifyTitle"]',
                                    message: '@TempData["NotifyMessage"]'
                                },
                                {
                                    // Ayarlar
                                    type: '@TempData["NotifyType"]',
                                    allow_dismiss: true,
                                    newest_on_top: true,
                                    placement: {
                                        from: "bottom",
                                        align: "right"
                                    },
                                    delay: 2500,
                                    timer: 500,
                                    animate: {
                                        enter: 'animated fadeInDown',
                                        exit: 'animated fadeOutUp'
                                    },
                                    offset: {
                                        x: 30,
                                        y: 30
                                    }
                                });
            </text>
        }
        });
    </script>
}



